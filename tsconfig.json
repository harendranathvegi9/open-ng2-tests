{
  "compilerOptions": {
    "noEmitHelpers": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "rootDir": "./src",
    "sourceMap": true,
    "target": "es5",
    "outDir": "dist/",
    "types": ["core-js"]
  },
  "files": [
    "src/bootstrap.ts"
  ],
  "exclude": ["node_modules"]
}